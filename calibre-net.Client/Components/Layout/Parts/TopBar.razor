<MudAppBar Fixed="true" Elevation="1" ToolBarClass="gap-2 px-0">
    <MudIconButton Icon="@(_open ? Icons.Material.Filled.MenuOpen : Icons.Material.Filled.Menu)" Color="Color.Inherit"
        OnClick="@((e) => ToggleDrawer())" />

    <SiteTitle />
    <SearchBar />
    <MudSpacer />
    <TopBarRightMenu Class="d-none d-md-flex gap-2 align-items-center"/>


</MudAppBar>

<MudDrawer ClipMode="DrawerClipMode.Always" @bind-Open="_open" Class="mud-drawer-fixed"> 
    <NavMenu />
    <MudSpacer />
    <TopBarRightMenu Class="d-flex flex-column gap-2 d-md-none"/>
</MudDrawer>
 
@code {

    private bool _open { get; set; } = true;

    void ToggleDrawer()
    {
        _open = !_open;
    }

}