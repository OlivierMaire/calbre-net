@using calibre_net.Client.Components
@inherits LayoutComponentBase
@layout calibre_net.Components.Layout.MyMudLayout
    
<MudLayout>
    <MainAppDrawerBar @rendermode="RenderMode.InteractiveServer" /> @* Here you can set what interactivity you want in the drawer without affecting the Body interactivity. *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
